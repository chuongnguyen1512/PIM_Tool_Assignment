<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox fx:id="boxLeft" prefHeight="700" prefWidth="300" style="-fx-border-color: grey; -fx-border-width: 0 0.5 0 0;"
      AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Button fx:id="btnOpenProject" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#openProjectList"
                prefWidth="200.0" text="Projects List" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets left="100.0" right="50.0" top="30.0"/>
            </VBox.margin>
            <font>
                <Font size="18.0"/>
            </font>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </Button>
        <Button fx:id="btnNew" alignment="TOP_LEFT" mnemonicParsing="false" prefWidth="200.0" text="New">
            <font>
                <Font size="18.0"/>
            </font>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <VBox.margin>
                <Insets left="100.0" right="50.0" top="10.0"/>
            </VBox.margin>
        </Button>
        <VBox fx:id="vboxChildNew" prefHeight="200.0" prefWidth="100.0" visible="false">
            <VBox.margin>
                <Insets left="100.0" right="50.0"/>
            </VBox.margin>
            <padding>
                <Insets top="10.0"/>
            </padding>
            <children>
                <Button fx:id="btnNewProject" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#openNewProject"
                        prefWidth="200.0" text="Project">
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0"/>
                    </padding>
                </Button>
                <Button alignment="TOP_LEFT" mnemonicParsing="false" prefWidth="200.0" text="Customer">
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0"/>
                    </padding>
                </Button>
                <Button alignment="TOP_LEFT" mnemonicParsing="false" prefWidth="200.0" text="Supplier">
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0"/>
                    </padding>
                </Button>
            </children>
        </VBox>
    </children>
</VBox>
