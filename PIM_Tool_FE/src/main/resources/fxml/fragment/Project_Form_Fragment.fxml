<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="70" AnchorPane.topAnchor="0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <VBox prefHeight="690.0" prefWidth="1000.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <children>
         <VBox prefHeight="58.0" prefWidth="100.0" style="-fx-border-color: grey; -fx-border-width: 0 0 0.5 0;">
            <VBox.margin>
               <Insets left="10.0" right="70.0" />
            </VBox.margin>
            <children>
                  <Label fx:id="lbProject" prefHeight="58.0" prefWidth="980.0" text="New Project">
                      <font>
                          <Font size="18.0" />
                      </font>
                      <VBox.margin>
                          <Insets bottom="3.0" />
                      </VBox.margin>
                      <padding>
                          <Insets bottom="10.0" top="20.0" />
                      </padding>
                  </Label>
            </children>
         </VBox>
            <Label fx:id="lbFieldValidation" prefHeight="50.0" prefWidth="800.0" style="-fx-background-color: #fbd9d9; -fx-background-radius: 5 5 5 5;" text="Please enter all the mandatory fields (*)" textFill="#ee6c6c" visible="false">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
                <padding>
                    <Insets bottom="10.0" left="20.0" top="10.0" />
                </padding>
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="20.0" top="5.0" />
            </VBox.margin>
            </Label>
            <HBox prefHeight="25.0" prefWidth="400.0">
                <children>
                    <Label prefHeight="25.0" prefWidth="100.0" text="Project Number" />
                    <Label prefHeight="25.0" prefWidth="20.0" text="*" textFill="#ee6c6c" />
                    <TextField fx:id="tfProjectNum" prefHeight="20.0" prefWidth="150.0" />
                    <Label fx:id="lbProjectNumValidation" prefHeight="25.0" prefWidth="500.0" textFill="#ee6c6c" visible="false">
                        <HBox.margin>
                            <Insets left="30.0" />
                        </HBox.margin>
                    </Label>
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" left="30.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HBox prefHeight="25.0" prefWidth="400.0">
                <children>
                    <Label prefHeight="25.0" prefWidth="100.0" text="Project Name" />
                    <Label prefHeight="25.0" prefWidth="20.0" text="*" textFill="#ee6c6c" />
                    <TextField fx:id="tfProjectName" prefHeight="25.0" prefWidth="450.0" />
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" left="30.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HBox prefHeight="25.0" prefWidth="600.0">
                <children>
                    <Label prefHeight="25.0" prefWidth="100.0" text="Customer" />
                    <Label prefHeight="25.0" prefWidth="20.0" text="*" textFill="#ee6c6c" />
                    <TextField fx:id="tfCustomer" prefHeight="25.0" prefWidth="450.0" />
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" left="30.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HBox prefHeight="25.0" prefWidth="600.0">
                <children>
                    <Label prefHeight="25.0" prefWidth="100.0" text="Group" />
                    <Label prefHeight="25.0" prefWidth="20.0" text="*" textFill="#ee6c6c" />
                    <ChoiceBox fx:id="cbGroup" prefWidth="150.0">
                    </ChoiceBox>
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" left="30.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HBox prefHeight="25.0" prefWidth="462.0">
                <children>
                    <Label prefHeight="25.0" prefWidth="120.0" text="Members" />
                    <TextField fx:id="tfMember" prefHeight="25.0" prefWidth="450.0" />
                    <Label fx:id="lbCustomerValidation" prefHeight="132.0" prefWidth="300.0" textFill="#ee6c6c" visible="false">
                        <HBox.margin>
                            <Insets left="10.0" />
                        </HBox.margin>
                    </Label>
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" left="30.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HBox prefHeight="25.0" prefWidth="462.0">
                <children>
                    <Label prefHeight="25.0" prefWidth="100.0" text="Status" />
                    <Label prefHeight="25.0" prefWidth="20.0" text="*" textFill="#ee6c6c" />
                    <ChoiceBox fx:id="cbStatus" prefWidth="150.0">
                    </ChoiceBox>
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" left="30.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HBox prefHeight="25.0" prefWidth="600.0">
                <children>
                    <Label prefHeight="25.0" prefWidth="100.0" text="Start Date" />
                    <Label prefHeight="25.0" prefWidth="20.0" text="*" textFill="#ee6c6c" />
                    <DatePicker fx:id="dpStartDate" prefHeight="20.0" prefWidth="150.0" />
                    <Label prefHeight="25.0" prefWidth="80.0" text="End Date">
                        <HBox.margin>
                            <Insets left="70.0" />
                        </HBox.margin>
                    </Label>
                    <DatePicker fx:id="dpEndDate" prefHeight="25.0" prefWidth="150.0" />
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" left="30.0" top="10.0" />
                </VBox.margin>
            </HBox>
            <HBox prefHeight="66.0" prefWidth="800.0" style="-fx-border-color: grey; -fx-border-width: 0.5 0 0 0;">
                <children>
                    <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#cancelProject" prefHeight="25.0" prefWidth="111.0" text="Cancel">
                        <HBox.margin>
                            <Insets left="500.0" right="50.0" />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="btnSubmit" mnemonicParsing="false" onAction="#submitProject" prefHeight="25.0" prefWidth="124.0" text="%btnCreateProject">
                  <HBox.margin>
                     <Insets left="50.0" right="50.0" />
                  </HBox.margin></Button>
                </children>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="70.0" top="40.0" />
                </VBox.margin>
                <padding>
                    <Insets bottom="20.0" top="20.0" />
                </padding>
            </HBox>
        </children>
    </VBox>
</AnchorPane>
